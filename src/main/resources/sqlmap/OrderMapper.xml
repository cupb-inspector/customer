<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Orders">


	<insert id="insert"
		parameterType="hxy.inspec.customer.po.Orders" useGeneratedKeys="true">
		insert
		into orders
		(custel,qualtel,excedate,date,factoryname,factoryaddress,factoryman,factorytel,profile,file,reportfile,status,fee,cost,othercost,profit,goods)
		values
		(#{custel},#{qualtel},#{excedate},#{date},#{factoryname},#{factoryaddress},#{factoryman},#{factorytel},#{profile},#{file},#{reportfile},#{status},#{fee},#{cost},#{othercost},#{profit},#{goods})
	</insert>



	<select id="selectAll"
		resultType="hxy.inspec.customer.po.Orders">
		select * from orders
	</select>
	<select id="findOrdersByTel" parameterType="String"
		resultType="hxy.inspec.customer.po.Orders">
		SELECT * FROM orders WHERE custel=#{custel}
	</select>




	<select id="findAllByTelAndStatus" parameterType="String"
		resultType="hxy.inspec.customer.po.Orders">
		SELECT * FROM orders WHERE custel=#{custel} and
		status=#{status}
	</select>
	
	<select id="findOrdersByTelAndStatus" parameterType="String"
		resultType="hxy.inspec.customer.po.Orders">
		SELECT * FROM orders WHERE custel=#{custel} and
		status=#{status}
	</select>
	
	<sql id="Base_Column_List">
		excedate, goods, factoryname, reportfile, reportfileuuid
	</sql>
	
	
	<!-- 根据分页数据start 和size查询数据 -->
	<select id="findByPage" parameterType="Map" resultType="hxy.inspec.customer.po.Orders">
		select * from orders WHERE custel=#{custel} and status=#{status}
		<if test="start!=null and size!=null">
			limit #{start},#{size}
		</if>
	</select>
	
		<!-- 查询未完成的最近的订单，根据分页数据start 和size查询数据 -->
	<select id="findOrdersByStatusJudge" parameterType="Map" resultType="hxy.inspec.customer.po.Orders">
		select * from orders WHERE custel=#{custel} and status &lt; #{status}
		<if test="start!=null and size!=null">
			limit #{start},#{size}
		</if>
	</select>
	
	

	<select id="findUserByOrdersId" parameterType="String"
		resultType="hxy.inspec.customer.po.Orders">
		SELECT * FROM orders WHERE ordesrid=#{ordesrid}
	</select>
	<select id="findOrdersById" parameterType="String"
		resultType="hxy.inspec.customer.po.Orders">
		SELECT * FROM orders WHERE orderid=#{orderid}
	</select>
	<delete id="delete"
		parameterType="hxy.inspec.customer.po.Orders">
		delete from orders where
		custel=#{custel}
	</delete>
	<update id="update"
		parameterType="hxy.inspec.customer.po.Orders">
		update orders set
		cusname=#{cusname},cususerid=#{cususerid},ttkdpasswd1=#{ttkdpasswd1},ttkdpasswd=#{ttkdpasswd},passwd=#{passwd},date=#{date},address=#{address}
		where custel=#{custel}
	</update>
	<update id="updateStatus"
		parameterType="hxy.inspec.customer.po.Orders">
		update orders set status=#{status} where
		orderid=#{orderid}
	</update>

</mapper>
