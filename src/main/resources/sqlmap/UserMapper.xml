<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="User">
	<insert id="insert" parameterType="hxy.inspec.customer.po.User"
		useGeneratedKeys="true">
		insert into cususer(tel, name ,
		passwd ,address,date,vip,trade,grade )
		values(#{tel} ,#{name}, #{passwd} ,
		#{address},#{date},#{vip},#{trade},#{grade})
	</insert>
	<select id="selectAll" resultType="hxy.inspec.customer.po.User">
		select * from cususer
	</select>
	<select id="findUserByNumber" parameterType="String"
		resultType="hxy.inspec.customer.po.User">
		SELECT * FROM cususer WHERE tel=#{tel}
	</select>
	<!-- 删除 -->
	<delete id="delete" parameterType="hxy.inspec.customer.po.User">
		delete from cususer where tel=#{tel}
	</delete>
	<!-- 修改用户 -->
	<update id="update" parameterType="hxy.inspec.customer.po.User">
		update cususer set name=#{name},cususerid=#{cususerid},ttkdpasswd1=#{ttkdpasswd1},ttkdpasswd=#{ttkdpasswd},passwd=#{passwd},date=#{date},address=#{address}
		where tel=#{tel}
	</update>

</mapper>
